NAME="$(basename ${BASH_SOURCE[0]})"

CXXFLAGS="-g3 -ggdb -Og -DDEBUG -DDUNE_FMatrix_WITH_CHECKING=1 -DDUNE_ISTL_WITH_CHECKING=1 -Wunused-variable -Wall -Wextra -Wc++0x-compat -Wparentheses -pedantic -Wredundant-decls -Wshadow -Wundef -Wnon-virtual-dtor -Wlogical-op"

source ${DIR}/.gcc_base
