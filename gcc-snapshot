  CC=/usr/lib/gcc-snapshot/bin/gcc \
  CXX=/usr/lib/gcc-snapshot/bin/g++ \
  F77=/usr/lib/gcc-snapshot/bin/gfortran \
  CXXFLAGS='-DDEBUG -Og -g3 -ggdb -std=c++0x -fPIC -ftemplate-backtrace-limit=0 -Wextra -Wall -Wunused-variable -Wparentheses -pedantic -Wredundant-decls -Wshadow -Wundef -Wnon-virtual-dtor -Wno-tautological-compare -Wfloat-equal -Wswitch-enum -Wunreachable-code ' \
  INKSCAPE=no \
  --enable-experimental-grid-extensions \
  --disable-documentation \
  INKSCAPE=no \
"
