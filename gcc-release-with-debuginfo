CONFIGURE_FLAGS=" \
  CC=gcc \
  CXX=g++ \
  F77=gfortran \
  CXXFLAGS='-std=c++14 -Og -fPIC -fno-strict-aliasing -ftemplate-backtrace-limit=0 -w -DDUNE_GRID_EXPERIMENTAL_GRID_EXTENSIONS=1 '\
  --enable-experimental-grid-extensions \
  --disable-documentation \
  --enable-parallel \
  --with-parmetis=/usr \
  INKSCAPE=no \
"
CMAKE_FLAGS="-Wno-dev -DSTDTHREAD_LINK_FLAGS='-lpthread -pthread'"
BUILDDIR=build-gcc-release-with-debuginfo
