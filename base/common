DIR="$(cd "$(dirname ${BASH_SOURCE[0]})/.." ;  pwd -P )"
TYPE=${TYPE:-Debug}
BDIR="$(cd "$(dirname ${BASH_SOURCE[0]})" ; cd ../../ ; pwd -P )"
BUILDDIR="${BDIR}/build/${NAME}"

CXXFLAGS="${CXXFLAGS} -std=c++14 -fPIC -fno-strict-aliasing -ftemplate-backtrace-limit=0"
CMAKE_FLAGS="-DENABLE_HEADERCHECK=1 -DCMAKE_BUILD_TYPE=${TYPE} -DDUNE_FORCE_PYTHON3=TRUE -DDUNE_PYTHON_FORCE_PYTHON3=TRUE -DDUNE_PYTHON_ALLOW_GET_PIP=TRUE -DDUNE_PYTHON_VIRTUALENV_SETUP=TRUE -DDXT_TEST_PROCS=4 -DCMAKE_DISABLE_FIND_PACKAGE_PETSc=TRUE -DCMAKE_DISABLE_FIND_PACKAGE_ParMETIS=True  -Wno-dev  ${CMAKE_EXTRA} -DCMAKE_CXX_COMPILER=${CXX} -DCMAKE_C_COMPILER=${CC} -DCMAKE_CXX_FLAGS='${CXXFLAGS}' ${CMAKE_FLAGS} -DDUNE_GRID_EXPERIMENTAL_GRID_EXTENSIONS=TRUE"
