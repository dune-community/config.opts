DIR="$(cd "$(dirname ${BASH_SOURCE[0]})" ;  pwd -P )"
source ${DIR}/stinson_common

TBB_CMAKE="-DTBB_DISABLE_FINAL_CHECK=1"
CXX=${CXX:-clang++}
CC=${CC:-clang}
CMAKE_FLAGS="-GNinja ${TBB_CMAKE} -Wno-dev -DCMAKE_BUILD_TYPE=${TYPE} ${CMAKE_EXTRA} -DCMAKE_CXX_COMPILER=${CXX} -DCMAKE_C_COMPILER=${CC}  -DCMAKE_CXX_FLAGS=-fPIC ${CXXFLAGS}"

