DIR="$(cd "$(dirname ${BASH_SOURCE[0]})" ;  pwd -P )"
source ${DIR}/stinson_common

TBB_CMAKE="-DTBB_DISABLE_FINAL_CHECK=1"
CXX=${CXX:-clang++}
CC=${CC:-clang}
CONFIGURE_FLAGS="CXX=${CXX} CC=${CC} F77=${F77} CXXFLAGS=${CXXFLAGS} --with-boost-libdir=/usr/lib/x86_64-linux-gnu "
CMAKE_FLAGS="${TBB_CMAKE} -Dfortran=OFF -Wno-dev -DCMAKE_BUILD_TYPE=${TYPE} ${CMAKE_EXTRA}"

