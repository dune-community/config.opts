CMAKE_FLAGS="-DDISABLE_CXX_VERSION_CHECK=1 -DCXX_MAX_SUPPORTED_STANDARD=11 -GNinja -Wno-dev -DCMAKE_BUILD_TYPE=${TYPE} ${CMAKE_EXTRA} -DSTDTHREAD_LINK_FLAGS='-lpthread -pthread'"


