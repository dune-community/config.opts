CONFIGURE_FLAGS=" \
  CC=clang \
  CXX=clang++ \
  F77=gfortran \
  CXXFLAGS='-std=c++0x -O2 -fPIC -fno-strict-aliasing -ftemplate-backtrace-limit=0 -w -DDNDEBUG -DNDEBUG' \
  --enable-experimental-grid-extensions \
  --disable-documentation \
  --with-parmetis=/usr \
  INKSCAPE=no \
"
CMAKE_FLAGS="-Wno-dev -DCMAKE_DISABLE_FIND_PACKAGE_PETSc=TRUE"
BUILDDIR=build-clang-release
