CONFIGURE_FLAGS=" \
  CC=clang \
  CXX=clang++ \
  F77=gfortran \
  CXXFLAGS='-std=c++0x -O2 -fPIC -fno-strict-aliasing -w -DDNDEBUG -DNDEBUG' \
  --enable-experimental-grid-extensions \
  --disable-documentation \
  INKSCAPE=no \
"
CMAKE_FLAGS="-Wno-dev -DUG_DIR=../local/lib/cmake/ug/"
BUILDDIR=build-clang-release
