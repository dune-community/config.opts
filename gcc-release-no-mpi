CONFIGURE_FLAGS=" \
  CC=gcc \
  CXX=g++ \
  F77=gfortran \
  CXXFLAGS='-std=c++11 -Os -fPIC -fno-strict-aliasing -ftemplate-backtrace-limit=0 -w -DDNDEBUG -DNDEBUG -DENABLE_MPI=0 -DENABLE_PARMETIS=0' \
  --enable-experimental-grid-extensions \
  --disable-documentation \
  --disable-parallel \
  --with-parmetis=/usr \
  INKSCAPE=no \
"
CMAKE_FLAGS="-Wno-dev -DSTDTHREAD_LINK_FLAGS='-lpthread -pthread' -DCMAKE_DISABLE_FIND_PACKAGE_PETSc=TRUE -DCMAKE_DISABLE_FIND_PACKAGE_MPI=TRUE -DCMAKE_DISABLE_FIND_PACKAGE_TBB=TRUE -DCMAKE_DISABLE_FIND_PACKAGE_ParMETIS=TRUE"
BUILDDIR=build-gcc-release-no-mpi
