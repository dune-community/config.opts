CONFIGURE_FLAGS=" \
  CC=gcc \
  CXX=g++ \
  F77=gfortran \
  CXXFLAGS='-std=c++11 -Os -fPIC -fno-strict-aliasing -w -DDNDEBUG -DNDEBUG -DDUNE_GRID_EXPERIMENTAL_GRID_EXTENSIONS=1' \
  --enable-experimental-grid-extensions \
  --disable-documentation \
  --enable-parallel \
  INKSCAPE=no \
"
CMAKE_FLAGS="-Wno-dev -DSTDTHREAD_LINK_FLAGS='-lpthread -pthread' -DUG_DIR=../local/lib/cmake/ug/"
BUILDDIR=build-gcc-release
