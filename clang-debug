DIR="$(cd "$(dirname ${BASH_SOURCE[0]})" ; pwd -P )"
NAME="$(basename ${BASH_SOURCE[0]})"

CXXFLAGS="-g3 -O0 -ggdb -DDEBUG -DDUNE_FMatrix_WITH_CHECKING=1 -DDUNE_ISTL_WITH_CHECKING=1 -Wunused-variable -Winline -Wall -Wextra -Wc++0x-compat -Wparentheses -pedantic -Wredundant-decls -Wshadow -Wundef -Wnon-virtual-dtor -Wnon-literal-null-conversion -Wused-but-marked-unused -Wno-tautological-compare -Wfloat-equal -Wdisabled-macro-expansion -Wcovered-switch-default -Wswitch-enum -Wunreachable-code -Wshorten-64-to-32"

source ${DIR}/base/clang
